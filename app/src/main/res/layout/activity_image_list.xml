                app:srcCompat="@drawable/cafeloisl" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="onClickImage3"
                app:srcCompat="@drawable/cafedeadend" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="onClickImage2"
                app:srcCompat="@drawable/barrafina" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/bourkestreetbakery"
                android:onClick="onClickImage1"/>
        </LinearLayout>

    </ScrollView>

