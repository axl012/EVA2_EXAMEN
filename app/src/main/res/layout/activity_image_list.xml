                android:onClick="onClickImage9"
                app:srcCompat="@drawable/forkeerestaurant" />

            <ImageView
                android:id="@+id/image8"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="onClickImage8"
                app:srcCompat="@drawable/fiveleaves" />

            <ImageView
                android:id="@+id/image7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="onClickImage7"
                app:srcCompat="@drawable/donostia" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="onClickImage6"
                app:srcCompat="@drawable/confessional" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="onClickImage5"
                app:srcCompat="@drawable/cafelore" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
